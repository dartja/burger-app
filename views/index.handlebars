<h1>The Burger Monster</h1>
Waiting to be devoured!
{{#each burgerData}}
  <pre>
    {{#if this.devoured}}
      <span>            This burger was eaten: {{burger_name}} <span>
    {{else}}
      {{burger_name}} 
      <form action="/update/{{ id }}" method="post">
      <button type="submit">Devour it!</button>
    </form> 
    {{/if}}  
  </pre>
{{/each}}

<form action="/create" method="post" id="add-burger">
  <textarea name="item" rows="2" cols="30"></textarea>
  <br><button type="submit">Enter Your Burger</button>
